<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.com.example.liaopenghui.scrolldemo.MainActivity">
<view.com.example.liaopenghui.scrolldemo.view.MyScrollView
    android:layout_width="match_parent"
    android:id="@+id/myScrollView"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="#ffff00"
            android:layout_width="match_parent"
            android:layout_height="500px"/>

        <View
            android:background="#00ff00"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

        <View
            android:background="#0000ff"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    </LinearLayout>




</view.com.example.liaopenghui.scrolldemo.view.MyScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/titleBgRl"
        android:background="#de375a" >

        <TextView
            android:text="返回"
            android:id="@+id/btn_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="#ffffff" />
        <!--标题-->
        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <!--详情-->
        <TextView
            android:text="详情"
            android:id="@+id/btn_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#ffffff" />
    </RelativeLayout>

</FrameLayout>
